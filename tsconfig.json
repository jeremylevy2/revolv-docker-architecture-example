{
  "compilerOptions": {
    "rootDir": "src",

    "outDir": "dist",

    "lib": ["es5"],

    "target": "es5",

    "moduleResolution": "node",

    "module": "commonjs",

    "sourceMap": true,

    "resolveJsonModule": true,

    "esModuleInterop": true,

    "noEmitHelpers": true,

    "importHelpers": true,

    "allowJs": false,

    "strictNullChecks": true,

    "alwaysStrict": true,

    "noFallthroughCasesInSwitch": true,

    "noImplicitAny": true,

    "noImplicitReturns": true,

    "noImplicitThis": true,

    "noUnusedLocals": true,

    "noUnusedParameters": true,

    "strict": true,

    "skipLibCheck": true,

    "typeRoots": ["./node_modules/@types", "./types"]
  }
}